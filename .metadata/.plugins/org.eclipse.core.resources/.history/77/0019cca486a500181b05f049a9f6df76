package com.scripteasy.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserSEDetails;
import org.springframework.security.core.userdetails.UserSEDetailsService;
import org.springframework.security.core.userdetails.UserSEnameNotFoundException;
import org.springframework.stereotype.Service;

import com.scripteasy.repositories.UserSERepository;


@Service
public class UserSEDetailsServiceImpl implements UserSEDetailsService {

	@Autowired
	private UserSERepository repo;
	
	@Override
	public UserSEDetails loadUserSEByUserSEname(String email) throws UserSEnameNotFoundException {
		UserSE cli = repo.findByEmail(email);
		if(cli == null) {
			throw new UserSEnameNotFoundException(email);
		}
		return new UserSESS(cli.getId(),cli.getEmail(),cli.getPassword(),cli.getProfiles());
	}

}
